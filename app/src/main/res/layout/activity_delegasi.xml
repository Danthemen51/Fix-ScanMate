<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#D6EFE9">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delegasi"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#006D5B" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fitur ini menampilkan data ketua/wakil kelas dan informasi delegasi mahasiswa."
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:textColor="#444" />

    <!-- Kamu bisa tambahkan RecyclerView atau CardView untuk list delegasi di sini -->
</LinearLayout>
