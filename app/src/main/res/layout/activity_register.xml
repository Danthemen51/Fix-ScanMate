<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#D6EFE9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Judul -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar Sekarang"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#006D5B"
            android:layout_marginBottom="24dp" />

        <!-- Nama -->
        <EditText
            android:id="@+id/registerNameEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Nama Lengkap"
            android:background="@drawable/edittext_bg"
            android:paddingHorizontal="16dp"
            android:inputType="textPersonName"
            android:drawableLeft="@android:drawable/ic_menu_edit"
            android:drawablePadding="12dp"
            android:layout_marginBottom="12dp"
            android:textColorHint="#d0d0d0"
            android:textColor="@color/black"/>

        <!-- Email -->
        <EditText
            android:id="@+id/registerEmailEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Email"
            android:background="@drawable/edittext_bg"
            android:paddingHorizontal="16dp"
            android:inputType="textEmailAddress"
            android:drawableLeft="@android:drawable/ic_menu_send"
            android:drawablePadding="12dp"
            android:layout_marginBottom="12dp"
            android:textColorHint="#d0d0d0"
            android:textColor="@color/black"/>

        <!-- Password + Eye Toggle -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/registerPasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Password"
                android:background="@drawable/edittext_bg"
                android:paddingStart="16dp"
                android:paddingEnd="48dp"
                android:inputType="textPassword"
                android:drawableStart="@drawable/ic_lock_idle_lock"
                android:drawablePadding="12dp"
                android:textColorHint="#d0d0d0"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/eyeToggle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_eye_closed"
                android:contentDescription="Toggle Password Visibility" />
        </RelativeLayout>

        <!-- Konfirmasi Password -->
        <EditText
            android:id="@+id/confirmPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Konfirmasi Password"
            android:background="@drawable/edittext_bg"
            android:paddingHorizontal="16dp"
            android:inputType="textPassword"
            android:drawableStart="@drawable/ic_lock_idle_lock"
            android:drawablePadding="12dp"
            android:layout_marginBottom="12dp"
            android:textColorHint="#d0d0d0"
            android:textColor="@color/black"/>

        <!-- NIM -->
        <EditText
            android:id="@+id/registerNimEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="NIM"
            android:background="@drawable/edittext_bg"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="12dp"
            android:textColorHint="#d0d0d0"
            android:textColor="@color/black"/>

        <!-- Gender -->
        <Spinner
            android:id="@+id/spinnerGender"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_bg"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="12dp" />

        <!-- Alamat -->
        <EditText
            android:id="@+id/registerAlamatEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Alamat"
            android:background="@drawable/edittext_bg"
            android:paddingHorizontal="16dp"
            android:inputType="textPostalAddress"
            android:layout_marginBottom="12dp"
            android:textColorHint="#d0d0d0"
            android:textColor="@color/black"/>

        <!-- Phone -->
        <EditText
            android:id="@+id/registerPhoneEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Nomor HP"
            android:background="@drawable/edittext_bg"
            android:paddingHorizontal="16dp"
            android:inputType="phone"
            android:layout_marginBottom="12dp"
            android:textColorHint="#d0d0d0"
            android:textColor="@color/black"/>

        <!-- Kelas -->
        <EditText
            android:id="@+id/registerKelasEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Kelas"
            android:background="@drawable/edittext_bg"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="12dp"
            android:textColorHint="#d0d0d0"
            android:textColor="@color/black"/>

        <!-- Jurusan -->
        <EditText
            android:id="@+id/registerJurusanEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Jurusan"
            android:background="@drawable/edittext_bg"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="12dp"
            android:textColorHint="#d0d0d0"
            android:textColor="@color/black"/>

        <!-- Role -->
        <Spinner
            android:id="@+id/spinnerRole"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_bg"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="24dp"
            />

        <!-- Tombol daftar -->
        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Daftar"
            android:textColor="#FFFFFF"
            android:backgroundTint="#006D5B"
            android:textStyle="bold" />

        <!-- Sudah punya akun -->
        <TextView
            android:id="@+id/goToLoginTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sudah punya akun? Masuk"
            android:textAlignment="center"
            android:textColor="#006D5B"
            android:textSize="14sp"
            android:layout_marginTop="24dp"
            />
    </LinearLayout>
</ScrollView>
